<% include partials/header %>

<div class="container">   
    <div class="row">
        <h1><%= college.name %> College New Event</h1>
        <form class="info-form" action="/colleges/<%= college._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[title]" placeholder="event title" maxlength="30" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="date" name="comment[date]" placeholder="MM/DD/YYYY" required>
            </div>
            <div class="form-group">
                <select class="form-control" name="comment[type]">
                    <option value="Food">Food</option>
                    <option value="Academic">Academic</option>
                    <option value="Social">Social</option>
                    <option value="Recreational">Recreational</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <textarea row="5" class="form-control" name="comment[description]" placeholder="description" required></textarea>
            </div>
            <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a href="/colleges/<%= college._id %>" class="btn">Back</a>
            </div>
        </form>
    </div>
</div>

<% include partials/footer %>