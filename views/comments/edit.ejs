<% include ../partials/header %>

<div class="container">   
    <div class="row">
        <h1>Edit Event</h1>
        <form class="info-form" action="/colleges/<%= college_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[title]" value="<%= comment.title %>" maxlength="30" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="date" name="comment[date]" value="<%= comment.date %>" required>
            </div>
            <div class="form-group">
                <select class="form-control" name="comment[type]">
                    <option value="Food">Food</option>
                    <option value="Academic">Academic</option>
                    <option value="Recreational">Recreational</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <textarea row="5" class="form-control" name="comment[description]" required><%= comment.description %></textarea>
            </div>
            <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                    <a href="/colleges/<%= college_id %>" class="btn">Back</a>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>
